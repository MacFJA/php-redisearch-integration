{
    "name": "macfja/redisearch-integration",
    "description": "Helper tools to integrate RediSearch in PHP project",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "Redis",
        "RediSearch",
        "Search Engine",
        "Suggestion"
    ],
    "readme": "README.md",
    "authors": [
        {
            "name": "MacFJA"
        }
    ],
    "support": {
        "issues": "https://github.com/MacFJA/php-redisearch-integration/issues",
        "source": "https://github.com/MacFJA/php-redisearch-integration"
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "macfja/redisearch": "^2.1.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "doctrine/annotations": "^1.13",
        "enlightn/security-checker": "^1.9",
        "ergebnis/composer-normalize": "^2.13",
        "friendsofphp/php-cs-fixer": "^3.0",
        "insolita/unused-scanner": "^2.3",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpmd/phpmd": "^2.10",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^8.5 || ^9.5",
        "roave/security-advisories": "dev-latest",
        "rskuipers/php-assumptions": "^0.8.0",
        "sebastian/phpcpd": "^4.1 || ^6.0",
        "vimeo/psalm": "^4.7"
    },
    "suggest": {
        "php": ">= 8.0 - For PHP Attribute definition",
        "ext-dom": "For XML definition",
        "ext-json": "For JSON definition",
        "doctrine/annotations": "For annotation definition"
    },
    "autoload": {
        "psr-4": {
            "MacFJA\\RediSearch\\Integration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MacFJA\\RediSearch\\Integration\\tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        }
    }
}
