{
    "name": "macfja/redisearch-integration",
    "type": "library",
    "description": "Helper tools to integrate RediSearch in PHP project",
    "keywords": [
        "Redis",
        "RediSearch",
        "Search Engine",
        "Suggestion"
    ],
    "homepage": "https://github.com/MacFJA/php-redisearch-integration",
    "readme": "README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "MacFJA"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "macfja/redisearch": "^1.3",
        "predis/predis": "^1.1",
        "psr/event-dispatcher": "^1.0",
        "sgh/comparable": "^1.1"
    },
    "require-dev": {
        "doctrine/annotations": "^1.11",
        "enlightn/security-checker": "^1.5",
        "ergebnis/composer-normalize": "^2.11",
        "friendsofphp/php-cs-fixer": "^2.17",
        "insolita/unused-scanner": "^2.2",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phan/phan": "^3.2",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12.62",
        "phpunit/phpunit": "^9.5",
        "rskuipers/php-assumptions": "^0.8.0",
        "sebastian/phpcpd": "^6.0",
        "symfony/polyfill-mbstring": "< 1.22.0",
        "vimeo/psalm": "^4.3"
    },
    "suggest": {
        "ext-json": "To load RediSearch definition from JSON files",
        "ext-simplexml": "To load RediSearch definition from XML files",
        "doctrine/annotations": "To use annotation on class"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MacFJA\\RediSearch\\Integration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MacFJA\\RediSearch\\Integration\\tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/MacFJA/php-redisearch-integration/issues",
        "source": "https://github.com/MacFJA/php-redisearch-integration"
    }
}
